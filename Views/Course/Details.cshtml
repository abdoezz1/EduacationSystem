@using MVC_day1.ViewModel
@model CourseViewModelVM

@{
    Layout = "_CourseLay";
}
     
              <!-- Courses Section -->
    <section id="courses" class="courses section">

      <div class="container">

        <div class="row">

          <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
            <div class="course-item">
              <img src="/assets/img/course-1.jpg" class="img-fluid" alt="...">
              <div class="course-content">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <p class="category">@Model.CourseName</p>
                  <h3 >@Model.Department</h3>
                  <h3 class>@Model.minDegree</h3>
                </div>

           @foreach(var cr in Model.instructors)
               { <div class="trainer d-flex justify-content-between align-items-center">
                  <div class="trainer-profile d-flex align-items-center">
                    <img src="/assets/img/testimonials/@cr.image" class="img-fluid" alt="">
                    <a href="" class="trainer-link">@cr.Name</a>
                  </div>
                  <div class="trainer-rank d-flex align-items-center">
                    <i class="bi bi-person user-icon"></i>&nbsp;50
                    &nbsp;&nbsp;
                    <i class="bi bi-heart heart-icon"></i>&nbsp;65
                  </div>
                </div>

                }
                
              </div>
            </div>
          </div> <!-- End Course Item-->

        </div>

      </div>

    </section><!-- /Courses Section -->

@section Back
    {
                  <div class="container">
                      <ol>
                            <li><a href="/Instructor/HomePage">Home</a></li>
                       <li class="current"><a href="/Courses">Back</a></li>
                      </ol>
                    </div>
}